<div class="name-header">
  <div class="pedigree-owner">
    <h3>pegigree chart for: </h3>
    <h1><%= viewData.user %></h1>
  </div>
  <div class="favorite-cat">
    <h3>favorite cat: </h3>
    <% if (viewData?.favoriteCat) { %>
      <h1><%= viewData.favoriteCat %></h1>
    <% } else { %> 
      <h1>I might be a dog person...</h1> 
    <% } %>
  </div>
</div>

<div class="lits">
    <% if (viewData?.lits?.length) { %>
      <div class="lits-container">
      <% viewData.lits.forEach( lit => { %>
        <div class="lit-wrapper">
          <p class="lit-text"><%= lit.litText %></p>
          <p class="published-at"><%= lit.createdAt %> </p>
        </div>
      <% }) %>
      </div>

    <% } else { %>
      <div class="no-lits">
        <p>This user has not posted any lits!</p>
      </div>
    </ul>
    <% } %> 
</div>